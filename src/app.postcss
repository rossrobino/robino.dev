@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	::view-transition-group(*) {
		animation-duration: 0.4s;
		animation-timing-function: ease-in-out;
	}
	@media (prefers-reduced-motion) {
		::view-transition-group(*) {
			animation-duration: 0s;
		}
	}
	section {
		@apply transition duration-500;
	}
}

@layer utilities {
	.text-wrap-balance {
		text-wrap: balance;
	}
}
