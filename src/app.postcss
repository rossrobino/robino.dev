@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	::view-transition-group(*) {
		animation-duration: 0.4s;
		animation-timing-function: cubic-bezier(0.7, 0.2, 0.1, 1.1);
	}
	@media (prefers-reduced-motion) {
		::view-transition-group(*) {
			animation-duration: 0s;
		}
	}
}
